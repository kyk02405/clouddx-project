# ============================================
# CloudDX Environment Configuration
# ============================================
# 팀원: 이 파일을 backend/.env로 복사하세요
# cp .env.example backend/.env

# ============================================
# MongoDB Atlas (팀 공용)
# ============================================
# 연결 문자열은 팀 리더에게 문의하세요
MONGODB_URL=mongodb+srv://tutum-admin:clouddx@tutum.odoeunm.mongodb.net/?appName=tutum
MONGODB_DB_NAME=clouddx

# ============================================
# JWT Authentication
# ============================================
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000

# ============================================
# Market Data APIs (선택사항)
# ============================================
KIS_APP_KEY=
KIS_APP_SECRET=
KIS_MODE=virtual
UPBIT_ACCESS_KEY=
UPBIT_SECRET_KEY=
